<!DOCTYPE html>
<html ng-app="app">
<% include basic/header %>
<script type="text/javascript" src="/js/login.js"></script>
<body>
<div class="container" ng-controller="controlador" ng-init="init()">
    <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Entre no sistema</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form accept-charset="UTF-8" role="form">
                    <fieldset>
			    	  	<div class="form-group">
			    		    <input ng-model="usuario.nome" class="form-control" placeholder="E-mail" name="nome" type="text">
			    		</div>
			    		<div class="form-group">
			    			<input ng-model="usuario.senha" class="form-control" placeholder="Senha" name="senha" type="password" value="">
			    		</div>
			    		<input class="btn btn-lg btn-success btn-block" type="button" ng-click="logar()" value="Entrar">
			    	</fieldset>
			      	</form>
			    </div>
			</div>
		</div>
	</div>
</div>
</body>
</html>