<!DOCTYPE html>
<html ng-app="app">
<% include basic/header %>
<script type="text/javascript" src="/js/cadCategoria.js"></script>
<script type="text/javascript">
$(document).ready(function() {
	$('#categoria').addClass("active");
});
</script>
<body>
	<% include basic/navbar %>
	<div class="jumbotron" ng-controller="controlador" ng-init="init()"> 
		<div class="container">
			<form class="form-horizontal">
				<h3>Categorias</h3>
				<div class="form-group">
					<label for="tipo" class="col-md-2 control-label">Categoria:</label>
					<div class="col-md-8">
						<input class="form-control" id="codigo" ng-model="categoria.nome">
					</div>
					<div class="checkbox col-md-2">
						<label>
							<input ng-model="ativado" 
									name="ativo" 
									type="checkbox">
							Ativo
						</label>
					</div>
				</div>
				<div class="form-group">
					 <div class="col-md-offset-2 col-md-10">
					 	<input type="button" class="btn btn-primary" value="Gravar" ng-click="salvar()"/>
						<input type="button" class="btn btn-default" value="Cancelar" ng-click="cancelar()"/>
					 </div>
				</div>
			</form>

			<table class="table table-bordered table-hover">
				<thead>
					<th>
						Categoria
					</th>
					<th>
						Ações
					</th>
				</thead>
				<tr ng-repeat="categoria in categorias | orderBy : 'nome'">
					<td>
						<span ng-bind="categoria.nome"></span>
					</td>
					<td>
						<div>
							<span class="btn btn-default glyphicon glyphicon-pencil" aria-hidden="true" ng-click="editar(categoria)"></span>
							<!-- <span class="btn btn-danger glyphicon glyphicon-remove" aria-hidden="true" ng-click="excluir(categoria.id)"></span> -->
						</div>
					</td>
				</tr>
			</table>
		</div>

		<div id="alerts" class="modal fade">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body">
		        <div>
					<div ng-repeat="alert in alerts" 
						ng-class="{'alert-success': alert.tipo==1, 'alert-info': alert.tipo==2, 'alert-danger': alert.tipo==3}" class="alert fade in">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
						<strong>{{alert.titulo}}</strong>
						<br>{{alert.texto}}
					</div>
			    </div>
		      </div>
		    </div>
		  </div>
		</div>
	</div>
	<div class="container">
		<hr>
		<% include basic/footer %>
	</div>
</body>
</html>